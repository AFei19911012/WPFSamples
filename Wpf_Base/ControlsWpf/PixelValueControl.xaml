<UserControl x:Class="Wpf_Base.ControlsWpf.PixelValueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:Wpf_Base.ControlsWpf"
             FontSize="14"
             mc:Ignorable="d">
    <Grid Margin="10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="TB_Position" Text="X = null, Y = null" Foreground="{DynamicResource PrimaryBrush}" 
                   Width="150" Margin="5,0" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1" x:Name="TB_PixelValue" Text="null" Foreground="{DynamicResource PrimaryBrush}" 
                   Width="200" Margin="5,0" VerticalAlignment="Center"/>
        <wpf:DateTimeNowControl Grid.Column="2" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>