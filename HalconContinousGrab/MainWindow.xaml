<Window x:Class="HalconContinousGrab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalconContinousGrab" 
        xmlns:halcon="clr-namespace:HalconDotNet;assembly=halcondotnet"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <halcon:HSmartWindowControlWPF Name="HalconWPF"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Acqusition" Margin="5" HorizontalAlignment="Center" Click="ButtonBase_OnClick"/>
            <Button Name="BtnContinues" Content="Realtime" Margin="5" HorizontalAlignment="Center" Click="ButtonBase_OnClick"/>
            <Button Content="Save" Margin="5" HorizontalAlignment="Center" Click="ButtonBase_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
