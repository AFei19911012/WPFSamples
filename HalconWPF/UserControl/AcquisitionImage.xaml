<UserControl x:Class="HalconWPF.UserControl.AcquisitionImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HalconWPF.UserControl"
             xmlns:halcon="clr-namespace:HalconDotNet;assembly=halcondotnet" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <halcon:HSmartWindowControlWPF Name="HalconWPF"/>
        <hc:ButtonGroup Grid.Row="1" Margin="5">
            <Button Height="48" Content="Acqusition" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <Button Height="48" Content="Realtime" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <Button Height="48" Content="Save" Foreground="{DynamicResource PrimaryTextBrush}"/>
        </hc:ButtonGroup>
    </Grid>
</UserControl>
