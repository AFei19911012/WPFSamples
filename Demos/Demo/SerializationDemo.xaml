<UserControl x:Class="Demos.Demo.SerializationDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demos.Demo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <UniformGrid Rows="2" Columns="3">
            <Button Content="OjbectToBinary" VerticalAlignment="Bottom" FontSize="24" Height="48" Margin="10" Click="Button_Click"/>
            <Button Content="OjbectToJson" VerticalAlignment="Bottom" FontSize="24" Height="48" Margin="10" Click="Button_Click"/>
            <Button Content="OjbectToXml" VerticalAlignment="Bottom" FontSize="24" Height="48" Margin="10" Click="Button_Click"/>
            <Button Content="BinaryToObject" VerticalAlignment="Top" FontSize="24" Height="48" Margin="10" Click="Button_Click"/>
            <Button Content="JsonToObject" VerticalAlignment="Top" FontSize="24" Height="48" Margin="10" Click="Button_Click"/>
            <Button Content="XmlToObject" VerticalAlignment="Top" FontSize="24" Height="48" Margin="10" Click="Button_Click"/>
        </UniformGrid>
    </Grid>
</UserControl>
