<UserControl x:Class="Demos.Demo.LockDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demos.Demo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal">
            <Button Content="顺序执行" Margin="2" Click="Button_Click"/>
            <Button Content="多线程" Margin="2" Click="Button_Click"/>
            <Button Content="线程锁" Margin="2" Click="Button_Click"/>
        </WrapPanel>

        <ListBox Grid.Row="1" ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:LockDemo,Mode=FindAncestor},Path=Source}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Margin="5" Text="{Binding Name}" VerticalAlignment="Center"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>