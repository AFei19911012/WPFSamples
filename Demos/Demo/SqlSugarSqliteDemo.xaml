             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demos.Demo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="增加" FontSize="24" Height="48" Margin="5" Click="ButtonAdd_Click"/>
            <Button Content="删除" FontSize="24" Height="48" Margin="5" Click="ButtonDel_Click"/>
            <Button Content="修改" FontSize="24" Height="48" Margin="5" Click="ButtonUpdate_Click"/>
            <Button Content="查询" FontSize="24" Height="48" Margin="5" Click="ButtonSearch_Click"/>
        </WrapPanel>
    </Grid>
